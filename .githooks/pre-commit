#!/bin/sh

# Pre-commit hook to check development flags before committing
# This ensures no dev flags are accidentally committed as enabled

echo "🔍 Running pre-commit checks..."

# Run the dev flags test
node scripts/test-dev-flags.js

if [ $? -ne 0 ]; then
    echo ""
    echo "❌ Commit blocked: Development flags are enabled!"
    echo "Please disable all DEV_FLAGS before committing."
    exit 1
fi

echo "✅ Pre-commit checks passed!"
exit 0
